<body>
    <div class="container">
        <br>
        <div class="card">
            <div class="card-header">
                <h2>Edição de categorias</h2>
            </div>
            <div class="card-body">
                <form method="post" action="/categories/update">
                    <input class="form-control" type="text" name="title" placeholder="Defina o titulo da categoria" value="<%= category.title%>" required>
                    <input type="text" name="id" hidden value="<%= category.id%>">
                    <br>
                    <button class="btn btn-primary">Atualizar</button>
                </form>
            </div>
        </div>
    </div>
</body>
